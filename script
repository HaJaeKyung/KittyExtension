]]></>).toString();
var c = Babel.transform(inline_src, { presets: [ "es2015", "es2016" ] });
eval(c.code);
/* jshint ignore:end */

const getJSON = (url) => fetch(url).then(response => response.json());
let switchPrice;

const rarityTable = {
